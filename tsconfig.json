{
    "include": [
        "next-env.d.ts", "**/*.ts", "**/*.tsx"
    ],
    "exclude": [
        "/node_modules/"
    ],

    "compilerOptions": {
        "target": "ES5",

        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,

        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "module": "ESNext",
        "moduleResolution": "node",
        "isolatedModules": true,

        "baseUrl": ".",

        "jsx": "preserve",
        "lib": ["DOM", "DOM.Iterable", "ESNext"]
    }
}